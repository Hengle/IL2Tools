<Window x:Class="MapMaker.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapMaker"
        mc:Ignorable="d"
        Title="Set SRTM directory" Height="250" Width="500" Background="Black" BorderThickness="4" BorderBrush="CadetBlue">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Directory:" Target="{Binding ElementName=txtName}" Foreground="White"/>
            <TextBox Name="txtName" />

            <StackPanel Margin="20" Orientation="Horizontal">
                <Button Height = "30" Width ="100" Margin="20" Click="Button_Click_2">Cancel</Button>
                <Button Height = "30" Width ="100" Margin="20" Click="Button_Click">Browse</Button>
                <Button Height = "30" Width ="100" Margin="20" Click="Button_Click_1">OK</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
